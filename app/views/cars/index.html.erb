<div class="w-4/5 mx-auto py-5">
  <h2 class="text-4xl text-center">車を追加する</h2>
  <%= form_with model: @car, local: true do |car| %>
    <div class="mx-auto w-100">
      <div class="my-6">
        <%= car.label :name, "車名" %><br>
        <%= car.text_field :name, class: "rounded-md bg-white outline-1 -outline-offset-1 outline-gray-300 w-100 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600" %>
      </div>
      <div class="my-6">
        <%= car.label :year, "年式" %><br>
        <%= car.number_field :year, class: "rounded-md bg-white outline-1 -outline-offset-1 outline-gray-300 w-100 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600" %>
      </div>
      <div>
        <%= car.submit "登録", class: "bg-black text-white py-2 px-5 rounded-sm cursor-pointer w-full" %>
      </div>
    </div>
  <% end %>

  <h2 class="text-4xl text-center mt-10">登録済み車一覧</h2>
  <table class="border border-collapse border-black w-full mt-5">
    <thead>
      <tr>
        <th class="border p-2 w-10/12 text-left">車名</th>
        <th class="border p-2 w-1/12">年式</th>
        <th class="border p-2 w-1/12"></th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td class="border p-2"><%= car.name %></td>
          <td class="border p-2 text-center"><%= car.year %></td>
          <td class="border p-2"><%= link_to "削除", car_path(car.id), method: :delete, data: { confirm: "削除しますか？" }, class: "bg-red-500 text-white py-2 px-5 rounded-sm cursor-pointer mx-auto" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>